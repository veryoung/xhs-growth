{
    "compilerOptions": {
      "target": "es6",               
      "module": "esnext",
      "lib": ["es2018", "dom"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/__tests__/**"]
  }
  